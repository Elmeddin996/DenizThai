@model Tour

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

<div class="marque-wrapper style-2">
    <div dir="rtl" class="swiper text-slider-2">
        <div class="swiper-wrapper slide-transtion">
            <div class="swiper-slide brand-slide-element">
                <div class="marque-text">
                    <img src="~/assets/img/marque.png" alt="img">
                    <h3>
                        @(lang == "az" ? Model.LocationAz :
                            lang == "en" ? Model.LocationEn :
                            lang == "ru" ? Model.LocationRu : Model.LocationAz)
                    </h3>
                </div>
            </div>
            <div class="swiper-slide brand-slide-element">
                <div class="marque-text">
                    <img src="~/assets/img/marque.png" alt="img">
                    <h3>
                        @(lang == "az" ? Model.Categorie.NameAz :
                            lang == "en" ? Model.Categorie.NameEn :
                            lang == "ru" ? Model.Categorie.NameRu : Model.Categorie.NameAz)
                    </h3>
                </div>
            </div>
            <div class="swiper-slide brand-slide-element">
                <div class="marque-text">
                    <img src="~/assets/img/marque.png" alt="img">
                    <h3>
                        @(lang == "az" ? Model.NameAz :
                            lang == "en" ? Model.NameEn :
                            lang == "ru" ? Model.NameRu : Model.NameAz)
                    </h3>
                </div>
            </div>
            <div class="swiper-slide brand-slide-element">
                <div class="marque-text">
                    <img src="~/assets/img/marque.png" alt="img">
                    <h3>
                        @(lang == "az" ? Model.LocationAz :
                            lang == "en" ? Model.LocationEn :
                            lang == "ru" ? Model.LocationRu : Model.LocationAz)
                    </h3>
                </div>
            </div>
            <div class="swiper-slide brand-slide-element">
                <div class="marque-text">
                    <img src="~/assets/img/marque.png" alt="img">
                    <h3>
                        @(lang == "az" ? Model.Categorie.NameAz :
                            lang == "en" ? Model.Categorie.NameEn :
                            lang == "ru" ? Model.Categorie.NameRu : Model.Categorie.NameAz)
                    </h3>
                </div>
            </div>
            <div class="swiper-slide brand-slide-element">
                <div class="marque-text">
                    <img src="~/assets/img/marque.png" alt="img">
                    <h3>
                        @(lang == "az" ? Model.NameAz :
                            lang == "en" ? Model.NameEn :
                            lang == "ru" ? Model.NameRu : Model.NameAz)
                    </h3>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="tour-details-section section-padding">
    <div class="container">
        <div class="tour-details-wrapper">
            <div class="row g-5">
                <div class="col-12">
                    <div class="tour-details-items">
                        <div class="row align-items-center mb-5">
                            <div class="col-lg-6 mb-4 mb-lg-0">
                                <div class="details-thumb">
                                    <img src="~/uploads/tours/@Model.Image" alt="img" class="img-fluid rounded shadow" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="details-content">
                                    <h2 class="fw-bold mb-3">
                                        @(lang == "az" ? Model.NameAz :
                                            lang == "en" ? Model.NameEn :
                                            lang == "ru" ? Model.NameRu : Model.NameAz)
                                    </h2>
                                    <h4 class="fw-bold mb-3">
                                        @(lang == "az" ? Model.Categorie.NameAz :
                                            lang == "en" ? Model.Categorie.NameEn :
                                            lang == "ru" ? Model.Categorie.NameRu : Model.Categorie.NameAz)
                                    </h4>
                                    <h6><strong>@localizer.GetLocalizedHtmlString("price"):</strong> <del>@Model.Price ฿</del></h6>

                                    <h5><strong>@localizer.GetLocalizedHtmlString("discount"):</strong> <span class="text-danger">@Model.DiscountedPrice฿</span></h5>

                                    <span class="location-icon d-block mb-2 text-muted">
                                        <i class="far fa-map-marker-alt"></i>
                                        @(lang == "az" ? Model.LocationAz :
                                            lang == "en" ? Model.LocationEn :
                                            lang == "ru" ? Model.LocationRu : Model.LocationAz)
                                    </span>

                                    <span class="location-icon d-block mb-2 text-muted" style="opacity: 0.4">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             viewBox="0 0 640 640"
                                             width="16"
                                             height="20"
                                             fill="#FB5B32">
                                            <path d="M320 128C302.3 128 288 142.3 288 160C288 177.7 302.3 192 320 192C337.7 192 352 177.7 352 160C352 142.3 337.7 128 320 128zM224 160C224 107 267 64 320 64C373 64 416 107 416 160C416 201.8 389.3 237.4 352 250.5L352 508.4C414.9 494.1 462.2 438.7 463.9 371.9L447.8 386C437.8 394.7 422.7 393.7 413.9 383.7C405.1 373.7 406.2 358.6 416.2 349.8L480.2 293.8C489.2 285.9 502.8 285.9 511.8 293.8L575.8 349.8C585.8 358.5 586.8 373.7 578.1 383.7C569.4 393.7 554.2 394.7 544.2 386L528 371.9C525.9 485 433.6 576 320 576C206.4 576 114.1 485 112 371.9L95.8 386.1C85.8 394.8 70.7 393.8 61.9 383.8C53.1 373.8 54.2 358.7 64.2 349.9L128.2 293.9C137.2 286 150.8 286 159.8 293.9L223.8 349.9C233.8 358.6 234.8 373.8 226.1 383.8C217.4 393.8 202.2 394.8 192.2 386.1L176.1 372C177.9 438.8 225.2 494.2 288 508.5L288 250.6C250.7 237.4 224 201.9 224 160.1z" />
                                        </svg>

                                        @Model.SecretWord
                                    </span>
                                </div>
                            </div>
                        </div>


                        @if (Model.TourImages != null && Model.TourImages.Any())
                        {
                            <div class="swiper mySwiper mb-5" style="padding: 20px 0;">
                                <div class="swiper-wrapper">
                                    @foreach (var image in Model.TourImages)
                                    {
                                        <div class="swiper-slide">
                                            <img src="~/uploads/tours/@image.ImageName" alt="Tour Image" style="width:100%; height:350px; object-fit:cover; border-radius:10px;" />
                                        </div>
                                    }
                                </div>

                                <!-- Navigation buttons -->
                                <div class="swiper-button-next"></div>
                                <div class="swiper-button-prev"></div>

                                <!-- Pagination dots -->
                                <div class="swiper-pagination"></div>
                            </div>
                        }
                        <div class="details-content">
                          
                           
                            <p style="white-space: pre-line; class="mb-3">
                                @(lang == "az" ? Model.DescriptionAz :
                                    lang == "en" ? Model.DescriptionEn :
                                    lang == "ru" ? Model.DescriptionRu : Model.DescriptionAz)
                            </p>
                            
                         
                            <div class="tour-details-icon">
                                <div class="row g-5 justity-content-end">
                                    <div class="col-lg-2 col-md-4">
                                        <div class="icon">
                                            <i class="flaticon-connection"></i>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4">
                                        <div class="icon">
                                            <i class="flaticon-cyber-security"></i>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4">
                                        <div class="icon">
                                            <i class="flaticon-guide"></i>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4">
                                        <div class="icon">
                                            <i class="flaticon-gym"></i>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4">
                                        <div class="icon">
                                            <i class="flaticon-cycling"></i>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4">
                                        <div class="icon">
                                            <i class="flaticon-hiking"></i>
                                        </div>
                                    </div>
                                   
                                </div>
                            </div>
                            <div class="map-area">
                                <h3>
                                </h3>
                                <div class="google-map">
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d384053.6970976869!2d98.04093017502835!3d7.839969707638571!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x305031e2c462524f%3A0xe9ca9a85063dba21!2sPhuket%2C%20Thailand!5e1!3m2!1sen!2saz!4v1750102513194!5m2!1sen!2saz" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var swiper = new Swiper(".mySwiper", {
            slidesPerView: 3,
            spaceBetween: 20,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            mousewheel: true,
            keyboard: true,
            grabCursor: true,
            breakpoints: {
                0: { slidesPerView: 1 },
                576: { slidesPerView: 2 },
                992: { slidesPerView: 3 }
            }
        });
    });
</script>
