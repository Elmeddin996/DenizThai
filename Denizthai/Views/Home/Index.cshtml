@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
    
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;

}


<!-- Hero Section Start -->
<section class="hero-section hero-4">
    <div class="array-button">
        <button class="array-prev"><i class="far fa-long-arrow-left"></i></button>
        <button class="array-next"><i class="far fa-long-arrow-right"></i></button>
    </div>
    <div class="swiper hero-slider">
        <div class="swiper-wrapper">

         @foreach (var item in Model.Sliders)
            {
                <div class="swiper-slide">
                    <div class="hero-items">

                        <div class="hero-bg bg-cover" style="background-image: url('uploads/sliders/@item.Image');"></div>
                        <div class="container">
                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <div class="hero-content">
                                        <h1 data-animation="fadeInUp" data-delay="1.5s">
                                            @(lang == "az" ? item.TitleAz :
                                                lang == "en" ? item.TitleEn :
                                                lang == "ru" ? item.TitleRu : item.TitleAz)
                                        </h1>
                                        <p data-animation="fadeInUp" data-delay="1.7s">
                                            @(lang == "az" ? item.DescriptionAz :
                                                lang == "en" ? item.DescriptionEn :
                                                lang == "ru" ? item.DescriptionRu : item.DescriptionAz)
                                        </p>
                                        <a href="@item.BtnUrl" class="theme-btn theme-btn-2 wow fadeInUp" data-wow-delay=".5s" style=" position: absolute;  right: 40px;  bottom: 50px;">
                                            <span>
                                                @(lang == "az" ? item.ButtonTextAz :
                                                    lang == "en" ? item.ButtonTextEn :
                                                    lang == "ru" ? item.ButtonTextRu : item.ButtonTextAz)
                                            </span> <i class="far fa-long-arrow-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>

