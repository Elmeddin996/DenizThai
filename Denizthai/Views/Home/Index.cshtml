<!-- Tour Section Start -->
<section class="tour-section fix section-padding">
    <div class="container">
        <div class="section-title text-center">
            <h2 class="wow fadeInUp" data-wow-delay=".3s">@localizer.GetLocalizedHtmlString("popular tours")</h2>
            
        </div>
        <div class="row">
            @foreach (var item in Model.Tours.Where(t => t.IsPopular))
            {
              <div class="col-xl-3 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay=".2s">
                            <div class="tour-box-items mt-0">
                                <div class="thumb">
                                    <img src="~/uploads/tours/@item.Image" alt="img" class="img-fluid rounded">
                                </div>
                                <div class="content">
                                    <span>
                                @(lang == "az" ? item.Categorie.NameAz :
                                    lang == "en" ? item.Categorie.NameEn :
                                    lang == "ru" ? item.Categorie.NameRu : item.Categorie.NameAz)
                                    </span>
                                    <h4>
                                        <a href="@Url.Action("Detail", "Tour", new { id = item.Id })">
                                    @(lang == "az" ? item.NameAz :
                                        lang == "en" ? item.NameEn :
                                        lang == "ru" ? item.NameRu : item.NameAz)
                                        </a>
                                    </h4>
                                    <h6>
                                        <span>$@item.DiscountedPrice</span>
                                        <del>$@item.Price</del>
                                    </h6>
                                    <ul class="list">
                                        <li>
                                            <i class="far fa-calendar"></i>
                                    @(lang == "az" ? item.DurationAz :
                                        lang == "en" ? item.DurationEn :
                                        lang == "ru" ? item.DurationRu : item.DurationAz)
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                
            }
        </div>
    </div>
</section>


<!-- Instagram Section Start -->
