@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
<!-- Hero Section Start -->
<section class="hero-section hero-4">
    <div class="array-button">
        <button class="array-prev"><i class="far fa-long-arrow-left"></i></button>
        <button class="array-next"><i class="far fa-long-arrow-right"></i></button>
    </div>
    <div class="swiper hero-slider">
        <div class="swiper-wrapper">





            <div class="swiper-slide">
                <div class="hero-items">
                    <div class="plane-shape">
                        <img src="~/assets/img/hero/new/plane-2.png" alt="img">
                    </div>
                    <div class="plane-shape-2">
                        <img src="~/assets/img/hero/new/plane-3.png" alt="img">
                    </div>
                    <div class="hero-bg bg-cover" style="background-image: url('assets/img/hero/04.jpg');"></div>
                    <div class="container">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="hero-content">
                                    <h6 data-animation="fadeInUp" data-delay="1.3s">Tour & Travel Agency</h6>
                                    <h1 data-animation="fadeInUp" data-delay="1.5s">
                                        <span class="shape-text">Sayt</span><span>Tezliklə</span> <br> İstifadəyə Veriləcək

                                    </h1>
                                    <p data-animation="fadeInUp" data-delay="1.7s">🧱🚧🏗️👷👷‍♀️🧑‍🏭🛠️🔩⚒️🔨</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="swiper-slide">
                <div class="hero-items">
                    <div class="plane-shape">
                        <img src="~/assets/img/hero/new/plane-2.png" alt="img">
                    </div>
                    <div class="plane-shape-2">
                        <img src="~/assets/img/hero/new/plane-3.png" alt="img">
                    </div>
                    <div class="hero-bg bg-cover" style="background-image: url('assets/img/hero/04.jpg');"></div>
                    <div class="container">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="hero-content">
                                    <h6 data-animation="fadeInUp" data-delay="1.3s">Tour & Travel Agency</h6>
                                    <h1 data-animation="fadeInUp" data-delay="1.5s">
                                        <span class="shape-text">Sayt</span><span>Tezliklə</span> <br> İstifadəyə Veriləcək

                                    </h1>
                                    <p data-animation="fadeInUp" data-delay="1.7s">🧱🚧🏗️👷👷‍♀️🧑‍🏭🛠️🔩⚒️🔨</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
</section>

<!-- Trending Section Start -->
<section class="trending-destinations section-padding fix">
    <div class="container">
        <div class="section-title-area lg-center">
            <div class="section-title">
                <h2 class="wow fadeInUp" data-wow-delay=".3s">Trenddə olan Səyahət Yerləri</h2>
            </div>
            <a asp-action="index" asp-controller="contact" class="theme-btn theme-btn-2 wow fadeInUp" data-wow-delay=".5s">
                <span>Daha Ətraflı</span> <i class="far fa-long-arrow-right"></i>
            </a>
        </div>
        <div class="row">
         @foreach (var item in Model.Locations)
            {
                <div class="col-xl-4 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay=".3s">
                    <div class="trending-destinations-card-items">
                        <div class="destinations-img">
                            <img src="~/uploads/locations/@item.Image" alt="img">
                            @*  <div class="icon">
                        <a href="~/destination-details.html">
                        <i class="fas fa-arrow-right"></i>
                        </a>
                        </div> *@
                            <ul class="destinations-content">
                                <li class="title">
                                    <a href="#">@item.NameAz</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

<!-- Tour Section Start -->
<section class="tour-section fix section-padding">
    <div class="container">
        <div class="section-title text-center">
            <h2 class="wow fadeInUp" data-wow-delay=".3s">Populyar Turlarımız</h2>
        </div>
        <div class="row">
            @foreach (var item in Model.Tours.Where(t => t.IsPopular))
            {
              <div class="col-xl-3 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay=".2s">
                            <div class="tour-box-items mt-0">
                                <div class="thumb">
                                    <img src="~/uploads/tours/@item.Image" alt="img" class="img-fluid rounded">
                                </div>
                                <div class="content">
                                    <span>@item.Categorie.NameAz</span>
                                    <h4>
                                        <a href="@Url.Action("Detail", "Tour", new { id = item.Id })">
                                            @item.NameAz
                                        </a>
                                    </h4>
                                    <h6>
                                        <span>$@item.DiscountedPrice</span>
                                        <del>$@item.Price</del>
                                    </h6>
                                    <ul class="list">
                                        <li>
                                            <i class="far fa-calendar"></i>
                                            @item.DurationAz
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                
            }
        </div>
    </div>
</section>


<!-- Instagram Section Start -->
<div class="section-title text-center">
    <h2 class="wow fadeInUp" data-wow-delay=".9s">Bizi İnstagramdan İzləyin</h2>
</div>
<div class="instagram-section fix">
    <div class="swiper instagram-slider">
        <div class="swiper-wrapper">
          @foreach (var item in Model.InstaPhotos)
            {
                <div class="swiper-slide">
                    <div class="instagram-image">
                        <img src="~/uploads/instaphotos/@item.Image" alt="img">
                        <a href="https://www.instagram.com/denizthai/" class="icon">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
